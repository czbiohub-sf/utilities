  'singularity_cache_dir': $( if [ ! -z ${VIASH_PAR_SINGULARITY_CACHE_DIR+x} ]; then echo "r'${VIASH_PAR_SINGULARITY_CACHE_DIR//\'/\'\"\'\"r\'}'"; else echo None; fi ),
